import pygame

class Ball:
    def __init__(self, x, y, color, radius):
        self.x = x
        self.y = y
        self.color = color
        self.radius = radius
        self.vel_x = 0
        self.vel_y = 0

    def update(self):
        self.x += self.vel_x
        self.y += self.vel_y

    def check_table_collision(self, table):
        if self.x - self.radius < table.left or self.x + self.radius > table.left + table.width:
            self.vel_x *= -1
        if self.y - self.radius < table.top or self.y + self.radius > table.top + table.height:
            self.vel_y *= -1

    def draw(self, screen):
        pygame.draw.circle(screen, self.color, (self.x, self.y), self.radius)
