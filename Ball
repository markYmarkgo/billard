import pygame
import math

class Ball:
    def __init__(self, x, y, radius, color):
        self.x = x
        self.y = y
        self.radius = radius
        self.color = color
        self.speed = 0
        self.direction = 0
        self.vel_x = 0  # Geschwindigkeit in x-Richtung
        self.vel_y = 0  # Geschwindigkeit in y-Richtung

    def update(self, table):
        # Update ball position here
        self.x += self.vel_x
        self.y += self.vel_y

        # Check for collisions with the table and update velocity if needed
        self.check_table_collision(table)

    def check_table_collision(self, table):
        # Implement table collision logic here
        pass

    def draw(self, screen):
        pygame.draw.circle(screen, self.color, (int(self.x), int(self.y)), self.radius)
