import pygame
import math

class Cue:
    def __init__(self, x, y):
        self.x = x
        self.y = y
        self.length = 100  # Anfangslänge des Queues
        self.visible = True

    def update(self, balls):
        if self.visible:
            mouse_x, mouse_y = pygame.mouse.get_pos()
            dx = mouse_x - self.x
            dy = mouse_y - self.y
            self.angle = math.atan2(dy, dx)
            self.length = min(math.sqrt(dx**2 + dy**2), 200)  # Maximale Länge des Queues auf 200 begrenzen

    def draw(self, window):
        if self.visible:
            pygame.draw.line(window, (255, 255, 255), (self.x, self.y), (self.x + self.length * math.cos(self.angle),
                                                                       self.y + self.length * math.sin(self.angle)), 5)

    def set_position(self, x, y):
        self.x = x
        self.y = y
